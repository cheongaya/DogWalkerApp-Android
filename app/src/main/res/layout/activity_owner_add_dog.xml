<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="activity"
            type="com.example.dogwalker.owner.OwnerAddDogActivity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".owner.OwnerAddDogActivity"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:text="반려동물을 등록해주세요"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:textSize="16sp"/>
        <!--사진-->
        <ImageView
            android:id="@+id/imageView_mydog_add_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/circular_corner_stroke_mydog2"
            android:src="@drawable/ic_baseline_add_photo_alternate_24"
            android:onClick="@{activity::onAddDogImg}"
            android:scaleType="centerInside"
            android:layout_gravity="center"/>
        <!--이름-->
        <TextView
            android:text="이름"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"/>
        <EditText
            android:id="@+id/editText_mydog_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="이름을 알려주세요"/>
        <!--생일-->
        <TextView
            android:text="생일"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/editText_mydog_birthday_year"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="YYYY년"/>
            <EditText
                android:id="@+id/editText_mydog_birthday_month"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="MM월"/>
            <EditText
                android:id="@+id/editText_mydog_birthday_day"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="DD일"/>
        </LinearLayout>
        <!--성별-->
        <TextView
            android:text="성별"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"/>
        <RadioGroup
            android:id="@+id/radioGroup_mydog_sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/radioButton_mydog_male"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="수컷"/>
            <RadioButton
                android:id="@+id/radioButton_mydog_female"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="암컷" />
        </RadioGroup>
        <!--유형-->
        <TextView
            android:text="유형"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"/>
        <RadioGroup
            android:id="@+id/radioGroup_mydog_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/radioButton_mydog_sizeS"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="소형"/>
            <RadioButton
                android:id="@+id/radioButton_mydog_sizeM"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="중형" />
            <RadioButton
                android:id="@+id/radioButton_mydog_sizeL"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="대형" />
        </RadioGroup>
        <!--몸무게-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:text="몸무게"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"/>
                <EditText
                    android:id="@+id/editText_mydog_weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="000.00kg"/>
            </LinearLayout>
            <!--중성화-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:text="중성화"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"/>
                <RadioGroup
                    android:id="@+id/radioGroup_mydog_neuter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/radioButton_mydog_neuter_after"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="완료"/>
                    <RadioButton
                        android:id="@+id/radioButton_mydog_neuter_before"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="전" />
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
        <!--품종-->
        <TextView
            android:text="품종"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"/>
        <RadioGroup
            android:id="@+id/radioGroup_mydog_kind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/radioButton_mydog_kind_breed"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="품종"/>
            <RadioButton
                android:id="@+id/radioButton_mydog_kind_mix"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="믹스견" />
            <RadioButton
                android:id="@+id/radioButton_mydog_kind_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="모름" />
        </RadioGroup>
        <Spinner
            android:id="@+id/spinner_dog_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"/>
        <!--등록번호(선택사항)-->
        <TextView
            android:text="등록번호(선택사항)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/editText_mydog_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="0000000-0000000"/>

        <Button
            android:id="@+id/button_mydog_add_ok"
            android:text="등록하기"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/circular_corner_stroke_sky"
            android:layout_marginTop="10dp"
            android:onClick="@{activity::onSaveMyDog}"
            android:textSize="16sp"/>

    </LinearLayout>
</layout>