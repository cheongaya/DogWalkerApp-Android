<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="20dp"
    android:background="@drawable/border_bottom">

    <ImageView
        android:id="@+id/imageView_item_walker_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_perm_identity_24"
        android:scaleType="centerInside"
        android:background="@drawable/circular_corner_stroke_mydog2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView_item_walker_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="권은진"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/imageView_item_walker_img"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/textView_item_walker_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20km"
        android:textColor="@color/colorBlack"
        app:layout_constraintTop_toBottomOf="@id/textView_item_walker_name"
        app:layout_constraintLeft_toRightOf="@id/imageView_item_walker_img"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/textView_item_walker_introduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="자기소개를 합니다"
        app:layout_constraintTop_toBottomOf="@id/textView_item_walker_location"
        app:layout_constraintLeft_toRightOf="@id/imageView_item_walker_img"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/textView_item_walker_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="리뷰 11개"
        app:layout_constraintTop_toBottomOf="@id/textView_item_walker_introduce"
        app:layout_constraintLeft_toRightOf="@id/imageView_item_walker_img"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/textView_item_walker_price_thirty_minutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3000원 (30분 기준)"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/colorRed"/>

    <ImageView
        android:id="@+id/imageVeiw_item_walker_bookmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_star_border_green_24"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>