<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="activity"
            type="com.example.dogwalker.walker.WalkerChattingActivity" />
    </data>

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorMain2"
        android:gravity="center"
        android:orientation="vertical">

        <!-- 채팅 영역 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@color/colorDarkGray">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_walker_chat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" />

        </LinearLayout>

        <!-- 하단 보내기 영역 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorDarkGray"
            android:padding="5dp">
            <EditText
                android:id="@+id/editText_chatting_text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:hint="typing your message"
                android:background="@drawable/circular_corner_solid_white"
                android:padding="10dp"
                android:layout_marginRight="5dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{activity::btnSendChatting}"
                android:background="@drawable/circular_corner_stroke_lightgray"
                android:text="Send"/>
        </LinearLayout>


    </LinearLayout>
</layout>