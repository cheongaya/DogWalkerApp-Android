<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView_item_chatlist_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/circular_corner_stroke_mydog2"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView_item_chatlist_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:text="채팅 이름"/>
        <TextView
            android:id="@+id/textView_item_chatlist_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="채팅 텍스트"
            android:layout_marginTop="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView_item_chatlist_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:gravity="right"
            android:text="채팅 날짜"/>
    </LinearLayout>

</LinearLayout>